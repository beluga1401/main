-- Blox Fruits Roblox PvP Script (Update)
-- Ch·ª©c nƒÉng: Nh·∫£y cao, No Clip, Aimbot g·∫ßn nh·∫•t + UI ƒë·∫πp (b·ªè ch·∫°y nhanh)

-- Load libraries
local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local player = Players.LocalPlayer
local mouse = player:GetMouse()
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

-- T·∫°o UI
local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "PvPControlUI"
ScreenGui.Parent = player:WaitForChild("PlayerGui")

local Frame = Instance.new("Frame")
Frame.Parent = ScreenGui
Frame.Size = UDim2.new(0, 250, 0, 300)
Frame.Position = UDim2.new(0, 30, 0, 100)
Frame.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
Frame.BackgroundTransparency = 0.1
Frame.BorderSizePixel = 0
Frame.Active = true
Frame.Draggable = true
Frame.ClipsDescendants = true

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 12)
UICorner.Parent = Frame

local Title = Instance.new("TextLabel")
Title.Parent = Frame
Title.Size = UDim2.new(1, 0, 0, 40)
Title.Text = "‚öîÔ∏è BelugaPvP Panel ‚öîÔ∏è"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.BackgroundTransparency = 1
Title.Font = Enum.Font.GothamBold
Title.TextScaled = true

local JumpLabel = Instance.new("TextLabel")
JumpLabel.Parent = Frame
JumpLabel.Position = UDim2.new(0, 10, 0, 50)
JumpLabel.Size = UDim2.new(0, 100, 0, 25)
JumpLabel.Text = "Jump Power"
JumpLabel.BackgroundTransparency = 1
JumpLabel.TextColor3 = Color3.fromRGB(255, 255, 255)
JumpLabel.Font = Enum.Font.Gotham
JumpLabel.TextScaled = true

local JumpBox = Instance.new("TextBox")
JumpBox.Parent = Frame
JumpBox.Position = UDim2.new(0, 120, 0, 50)
JumpBox.Size = UDim2.new(0, 100, 0, 25)
JumpBox.PlaceholderText = "50"
JumpBox.Text = ""
JumpBox.Font = Enum.Font.Gotham
JumpBox.TextScaled = true
JumpBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
JumpBox.TextColor3 = Color3.fromRGB(255, 255, 255)

local NoClipButton = Instance.new("TextButton")
NoClipButton.Parent = Frame
NoClipButton.Position = UDim2.new(0.1, 0, 0, 100)
NoClipButton.Size = UDim2.new(0.8, 0, 0, 40)
NoClipButton.Text = "Enable NoClip"
NoClipButton.BackgroundColor3 = Color3.fromRGB(70, 130, 180)
NoClipButton.TextColor3 = Color3.fromRGB(255, 255, 255)
NoClipButton.Font = Enum.Font.GothamBold
NoClipButton.TextScaled = true

local AimbotButton = Instance.new("TextButton")
AimbotButton.Parent = Frame
AimbotButton.Position = UDim2.new(0.1, 0, 0, 150)
AimbotButton.Size = UDim2.new(0.8, 0, 0, 40)
AimbotButton.Text = "Enable Aimbot"
AimbotButton.BackgroundColor3 = Color3.fromRGB(180, 70, 70)
AimbotButton.TextColor3 = Color3.fromRGB(255, 255, 255)
AimbotButton.Font = Enum.Font.GothamBold
AimbotButton.TextScaled = true

local noclip = false
local aimbot = false

-- Update Jump Power
JumpBox.FocusLost:Connect(function()
    local value = tonumber(JumpBox.Text)
    if value then
        humanoid.JumpPower = value
    else
        humanoid.JumpPower = 50
    end
end)

-- NoClip toggle
NoClipButton.MouseButton1Click:Connect(function()
    noclip = not noclip
    NoClipButton.Text = noclip and "Disable NoClip" or "Enable NoClip"
end)

-- Aimbot toggle
AimbotButton.MouseButton1Click:Connect(function()
    aimbot = not aimbot
    AimbotButton.Text = aimbot and "Disable Aimbot" or "Enable Aimbot"
end)

-- NoClip handler
RunService.Stepped:Connect(function()
    if noclip and character then
        for _, v in pairs(character:GetChildren()) do
            if v:IsA("BasePart") then
                v.CanCollide = false
            end
        end
    end
end)

-- Aimbot handler
RunService.RenderStepped:Connect(function()
    if aimbot then
        local closest = nil
        local shortest = math.huge
        for _, p in pairs(Players:GetPlayers()) do
            if p ~= player and p.Character and p.Character:FindFirstChild("HumanoidRootPart") then
                local dist = (p.Character.HumanoidRootPart.Position - character.HumanoidRootPart.Position).magnitude
                if dist < shortest then
                    shortest = dist
                    closest = p
                end
            end
        end
        if closest then
            local hrp = closest.Character.HumanoidRootPart
            mouse.TargetFilter = hrp
            local cam = workspace.CurrentCamera
            cam.CFrame = CFrame.new(cam.CFrame.Position, hrp.Position)
        end
    end
end)

print("BelugaPvP Script ƒë√£ ch·∫°y!")

-- Th√¥ng b√°o tr√™n m√†n h√¨nh khi ch·∫°y script th√†nh c√¥ng
local Notification = Instance.new("TextLabel")
Notification.Parent = ScreenGui
Notification.Size = UDim2.new(0, 280, 0, 40)
Notification.Position = UDim2.new(0, 10, 0, 360)
Notification.BackgroundColor3 = Color3.fromRGB(40, 150, 40)
Notification.TextColor3 = Color3.new(1, 1, 1)
Notification.Font = Enum.Font.GothamBold
Notification.TextScaled = true
Notification.Text = "üöÄ BelugaPvP Script loaded successfully!"
Notification.BackgroundTransparency = 0
Notification.ZIndex = 10
Notification.ClipsDescendants = true
local cornerNotif = Instance.new("UICorner", Notification)
cornerNotif.CornerRadius = UDim.new(0, 12)

-- T·ª± ƒë·ªông ·∫©n sau 5 gi√¢y
delay(5, function()
    if Notification and Notification.Parent then
        Notification:Destroy()
    end
end)
